<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstcashactivity"
    android:background="#F9FAFC"
    >

    <ImageView
        android:id="@+id/imagecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagecard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteY="159dp"></ImageView>

    <TextView
        android:id="@+id/textviewperioddeliverycard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imagecard"
        android:text="Youâ€™ll receive your card in 3 - 5 days on"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="40px"
        android:textColor="#0A1F44"
        ></TextView>


    <TextView
        android:id="@+id/textviewaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textviewperioddeliverycard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="40px"
        android:textColor="#707379"
        ></TextView>

    <Button
        android:id="@+id/btnseemycard"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="See my card"
        android:textAllCaps="false"
        android:textSize="10pt"
        android:background="@drawable/animationbutton"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



