<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp1Fragment"
    android:background="@color/colorbleu"
    android:id="@+id/managementlayout"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New regular Contribution"

        android:textColor="@color/white_87"
        android:textSize="50px"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/contadd">
    </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayoutformulaire"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:background="@drawable/background"

        >

        <TextView
            android:id="@+id/textviewtothisaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To this account"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorblack"
            android:textSize="30px">

        </TextView>


        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/email_array"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:prompt="@string/app_name" />

        <TextView
            android:id="@+id/textviewCTRdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your next contribution takes effect at"
            android:textSize="35px"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorblack"
            android:layout_marginLeft="15dp"
            ></TextView>


        <EditText
            android:id="@+id/edittextCTRdate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangletext"
            android:layout_marginTop="10dp"
            android:hint="01/01/2020"
            android:textSize="45px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"


            ></EditText>

        <TextView
            android:id="@+id/textviewdelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your next contribution takes effect each ..."
            android:textSize="35px"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorblack"
            android:layout_marginLeft="15dp"
            ></TextView>

        <EditText
            android:id="@+id/edittextdelay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangletext"
            android:layout_marginTop="10dp"
            android:textSize="45px"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            ></EditText>

        <TextView
            android:id="@+id/textviewpurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purpose"
            android:textSize="35px"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorblack"
            android:layout_marginLeft="15dp"
            ></TextView>

        <EditText
            android:id="@+id/edittextpurpose"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangletext"
            android:layout_marginTop="10dp"
            android:textSize="45px"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            ></EditText>

        <TextView
            android:id="@+id/textviewamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="35px"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorblack"
            ></TextView>
        <EditText
            android:id="@+id/edittextamount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangletext"
            android:layout_marginTop="10dp"
            android:textSize="45px"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            ></EditText>




        <Button
            android:id="@+id/btndone"
            android:text="done"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="49px"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/rectangle"
            app:layout_constraintTop_toBottomOf="@+id/edittextamount"
            android:layout_marginTop="70dp"
            android:enabled="false"

            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
