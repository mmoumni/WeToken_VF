<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstcashactivity"
    android:background="#F9FAFC">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textcashout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@id/firstcashactivity"
        android:text="cash out"
        android:textColor="#21293A"
        ></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageviewdesigncoins"
        app:layout_constraintTop_toBottomOf="@+id/textcashout"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@id/firstcashactivity"
        android:src="@drawable/imagedesigncoins"
        ></androidx.appcompat.widget.AppCompatImageView>




    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageviewcodebarre"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageviewdesigncoins"
        app:layout_constraintRight_toRightOf="@id/imageviewdesigncoins"
        app:layout_constraintTop_toTopOf="@+id/imageviewdesigncoins"
        ></androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayoutamounteuros"
        app:layout_constraintTop_toBottomOf="@+id/imageviewdesigncoins"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@+id/firstcashactivity"
        android:layout_marginTop="50dp"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_euro"

            android:textSize="90px"
            android:inputType="number"
            android:textColor="#21293A"
            ></androidx.appcompat.widget.AppCompatEditText>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€"
            android:textSize="90px"
            android:textColor="#21293A"

            ></androidx.appcompat.widget.AppCompatTextView>


    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewmaxamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearlayoutamounteuros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="max 300 €"
        android:textColor="#DB8965"
        android:layout_marginTop="20dp"></androidx.appcompat.widget.AppCompatTextView>

    <Button
        android:id="@+id/btncashout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Cash Out"
        android:textAllCaps="false"
        android:textSize="10pt"
        android:background="@drawable/animationbutton"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



