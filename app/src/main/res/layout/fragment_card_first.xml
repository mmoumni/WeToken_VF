<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstcashactivity"
    android:background="#F9FAFC"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textcard"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@id/firstcashactivity"
        android:text="WeToken Card"
        android:textColor="#21293A"
        ></androidx.appcompat.widget.AppCompatTextView>


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@+id/firstcashactivity"
        app:layout_constraintTop_toBottomOf="@+id/textcard"
        android:src="@drawable/cardwetoken"
        ></androidx.appcompat.widget.AppCompatImageView>



    <Button
        android:id="@+id/btngetcard"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Get WeToken card"
        android:textAllCaps="false"
        android:textSize="10pt"
        android:background="@drawable/animationbutton"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



