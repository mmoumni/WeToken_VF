<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp1Fragment"
    android:background="@color/colorbackground2">

    <ImageView
        android:id="@+id/backgrounda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/backgrounda"
        />
    <LinearLayout
        android:id="@+id/l_changepassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/retour"
            android:layout_width="10dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/retour"

            />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titlepassword"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:text="Change Password"
        android:lineSpacingExtra="0sp"
        android:gravity="center_horizontal|top"

        app:layout_constraintLeft_toRightOf="@+id/retour"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorbackground"
        android:textSize="24sp"
        />





    </LinearLayout>

    <ImageView
        android:id="@+id/backgroundb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />




    <ImageView
        android:id="@+id/imgrescu"
        android:layout_width="213dp"
        android:layout_height="165dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/security"
        />










    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@+id/imgrescu"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="50dp"

        android:id="@+id/pas1">

        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/quicksand"
            android:id="@+id/Currentpassword"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/rectangle_edittext"
            app:layout_constraintTop_toTopOf="@id/backgroundb"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Current password"
            android:paddingStart="18dp"
            android:paddingEnd="20dp"
            android:alpha="0.7"
            android:inputType="textPassword"



            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@+id/pas1"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="20dp"
        android:id="@+id/pas2">

        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/quicksand"
            android:id="@+id/Newpassword"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/rectangle_edittext"

            app:layout_constraintTop_toBottomOf="@id/Currentpassword"
            android:layout_marginTop="35dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="New password"
            android:alpha="0.7"
            android:paddingStart="18dp"
            android:paddingEnd="20dp"
            android:inputType="textPassword"


            />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@+id/pas2"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/passw3">

    <com.google.android.material.textfield.TextInputEditText
        android:fontFamily="@font/quicksand"
        android:id="@+id/Repeatpassword"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/rectangle_edittext"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/Newpassword"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Repeat password"
        android:paddingStart="18dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"


        />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/changepassword"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@+id/passw3"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/rectanglev2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/quicksand"
        android:lineSpacingExtra="0sp"



        />





</androidx.constraintlayout.widget.ConstraintLayout>