<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/swipe"
                                android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout

            android:tag="Bottom2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/star"
                android:src="@drawable/ic_star"
                android:layout_width="70dp"
                android:background="#f7e79c"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
        <ImageView
                android:id="@+id/magnifier"
                android:src="@drawable/ic_edit"
                android:layout_width="70dp"
                android:background="#4cd964"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
        <ImageView
                android:id="@+id/trash"
                android:src="@drawable/trash"
                android:layout_width="70dp"
                android:background="@color/red"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:background="@color/white_56"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white_56"
            android:layout_weight="0.15"
            android:layout_height="60dp"
            android:id="@+id/linearimg"
            android:layout_width="0dp">

        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/photo"
        />

        <ImageView android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:id="@+id/imgType"
                   app:layout_constraintBottom_toBottomOf="@id/linearimg"
                   app:layout_constraintRight_toRightOf="@id/profile"
        android:src="@drawable/fleshacancel"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
                android:id="@+id/position"
                android:tag="Hover"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="0.60"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_height="wrap_content">
        <TextView
                android:fontFamily="@font/quicksand"
                android:textColor="@color/colorblack"
                android:id="@+id/txtPurpose"
                android:text="purpose"
                android:tag="Hover"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/txtDate"
                android:layout_marginTop="5dp"
                android:text="02:00"
                android:tag="Hover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:textColor="@color/colorbleu"
                    android:id="@+id/txtAmounnt"
                    android:text="1.8 â‚¬"
android:layout_gravity="center"
                    android:tag="Hover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>