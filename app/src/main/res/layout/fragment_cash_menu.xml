<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cashmenuactivity"
    android:background="@color/colorbackground"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textcashout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/cashmenuactivity"
        app:layout_constraintRight_toRightOf="@id/cashmenuactivity"
        android:text="cash out"
        android:textColor="#21293A"
        ></androidx.appcompat.widget.AppCompatTextView>

    <Button
        android:id="@+id/buttoncash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/animationbuttonmenu"
        app:layout_constraintLeft_toLeftOf="@+id/cashmenuactivity"
        app:layout_constraintRight_toRightOf="@id/cashmenuactivity"
        app:layout_constraintTop_toBottomOf="@+id/textcashout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/hand"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Cash"
        android:textAllCaps="false"

        ></Button>


    <Button
        android:id="@+id/buttonbanktransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/animationbuttonmenu"
        app:layout_constraintLeft_toLeftOf="@+id/cashmenuactivity"
        app:layout_constraintRight_toRightOf="@id/cashmenuactivity"
        app:layout_constraintTop_toBottomOf="@+id/buttoncash"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_bank"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Bank Transfer"
        android:textAllCaps="false"

        ></Button>



    <Button
        android:id="@+id/buttoncard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/animationbuttonmenu"
        app:layout_constraintLeft_toLeftOf="@+id/cashmenuactivity"
        app:layout_constraintRight_toRightOf="@id/cashmenuactivity"
        app:layout_constraintTop_toBottomOf="@+id/buttonbanktransfer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/card"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="WeToken Card"
        android:textAllCaps="false"

        ></Button>


</androidx.constraintlayout.widget.ConstraintLayout>



