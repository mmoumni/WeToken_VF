<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstcashactivity"
    android:background="#F9FAFC"
   >


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textcashout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@id/firstcashactivity"
        android:text="Bank Transfer one"
        android:textColor="#21293A"
        ></androidx.appcompat.widget.AppCompatTextView>







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayoutamounteuros"
        app:layout_constraintTop_toBottomOf="@+id/textcashout"
        app:layout_constraintLeft_toLeftOf="@+id/firstcashactivity"
        app:layout_constraintRight_toRightOf="@+id/firstcashactivity"
        android:layout_marginTop="120dp"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_euro"

            android:textSize="90px"
            android:inputType="number"
            android:textColor="#21293A"
            ></androidx.appcompat.widget.AppCompatEditText>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€"
            android:textSize="90px"
            android:textColor="#21293A"

            ></androidx.appcompat.widget.AppCompatTextView>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewwetoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearlayoutamounteuros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="40px"
        android:text="0.00089 WT"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textviewmaxamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearlayoutamounteuros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="max 300 €"
        android:textColor="#DB8965"
        android:layout_marginTop="50dp"></androidx.appcompat.widget.AppCompatTextView>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="10pt"
        android:background="@drawable/animationbutton"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



