<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp1Fragment"
    android:background="@color/colorbleu">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/retour"
            android:layout_width="10dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/retour"

            />
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/titlepassword"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:text="Account Information"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal|top"
            app:layout_constraintLeft_toRightOf="@+id/retour"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorbackground"
            android:textSize="24sp"
            />





    </LinearLayout>






    <ImageView
        android:id="@+id/backgrounda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/backgrounda"
        />

    <ImageView
        android:id="@+id/imgrescu"
        android:layout_width="213dp"
        android:layout_height="165dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/groupresetpass"
        />



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="170dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/imgrescu"
            android:id="@+id/layout"

            >



            <TextView
                app:layout_constraintTop_toTopOf="@id/layout"
                android:id="@+id/FirstName"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:text="Account Information"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|top"
                app:layout_constraintLeft_toRightOf="@+id/retour"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorbleu"
                android:textSize="24sp"
                android:layout_marginTop="100dp"
                />

            <EditText
                android:fontFamily="@font/quicksand"
                android:id="@+id/FirstNameedit"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/rectangle_edittext"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/FirstName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Repeat password"
                android:paddingStart="18dp"
                android:paddingEnd="20dp"
                android:inputType="textPassword"


                />


            <TextView
                app:layout_constraintTop_toTopOf="@id/FirstNameedit"
                android:id="@+id/LastName"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:text="Last Name"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|top"
                app:layout_constraintLeft_toRightOf="@+id/retour"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorbleu"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:fontFamily="@font/quicksand"
                android:id="@+id/LastNameedit"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/rectangle_edittext"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/LastName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Last Name"
                android:paddingStart="18dp"
                android:paddingEnd="20dp"
                android:inputType="textPassword"


                />


            <TextView
                app:layout_constraintTop_toTopOf="@id/LastNameedit"
                android:id="@+id/PhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:text="Phone Number"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|top"
                app:layout_constraintLeft_toRightOf="@+id/retour"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorbleu"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:fontFamily="@font/quicksand"
                android:id="@+id/PhoneNumberedit"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/rectangle_edittext"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/PhoneNumber"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Phone Number"
                android:paddingStart="18dp"
                android:paddingEnd="20dp"
                android:inputType="number"


                />




            <TextView
                app:layout_constraintTop_toTopOf="@id/PhoneNumberedit"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:text="Email"
                android:lineSpacingExtra="0sp"
                android:gravity="center_horizontal|top"
                app:layout_constraintLeft_toRightOf="@+id/retour"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorbleu"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:fontFamily="@font/quicksand"
                android:id="@+id/emailedit"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/rectangle_edittext"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/email"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Email"
                android:paddingStart="18dp"
                android:paddingEnd="20dp"
                android:inputType="number"


                />








            <ImageView
                android:id="@+id/carte"
                android:layout_width="213dp"
                android:layout_height="165dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/carte"
                />







        </LinearLayout>







    </ScrollView>





















</androidx.constraintlayout.widget.ConstraintLayout>