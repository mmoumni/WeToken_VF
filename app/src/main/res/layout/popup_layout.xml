<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:minHeight="110dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="70dp"
              android:layout_marginLeft="70dp"
              android:layout_marginTop="90dp"
              android:layout_marginBottom="80dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/retour"
            android:layout_width="10dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/backnoir"

            />






    </LinearLayout>




    <LinearLayout
        android:id="@+id/l_Englais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/eng"/>
        <TextView
            android:id="@+id/textviewEnglais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Englais"
            android:textSize="44px"
            android:background="@drawable/animationtextview"
            android:textColor="@color/colorblack"
            />



        <RadioButton
            android:id="@+id/RBAnglais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/l_Francais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/france"/>
        <TextView
            android:id="@+id/textviewFrancais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Francais"
            android:textSize="44px"
            android:background="@drawable/animationtextview"
            android:textColor="@color/colorblack"
            />



        <RadioButton
            android:id="@+id/RBFrancais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_Arabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arab"/>
        <TextView
            android:id="@+id/textviewArabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Arabe"
            android:textSize="44px"
            android:background="@drawable/animationtextview"
            android:textColor="@color/colorblack"
            />



        <RadioButton
            android:id="@+id/RBArabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>







    <Button
        android:id="@+id/btnPopup"
        android:text="Confirmer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="49px"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/rectanglev2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        />




</LinearLayout>