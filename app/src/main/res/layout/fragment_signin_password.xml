<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PasswordFragment"
    android:background="@color/colorgris">






    <ImageView
        android:id="@+id/image_3"
        android:layout_width="220dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="78dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="77dp"
        android:background="@drawable/logo"
        android:backgroundTint="@color/colorbackground2" />




    <TextView
        android:id="@+id/create_an_a"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:text="Enter your Password"
        android:textAppearance="@style/create_an_a"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/image_3"
        android:layout_marginTop="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="57dp"/>




    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@+id/create_an_a"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:id="@+id/password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="280dp"
            android:id="@+id/texttt"
            android:layout_height="38dp"
            android:hint="@string/passw"
            android:gravity="top"
            android:inputType="textPassword"
            android:background="@drawable/rectangle_c"
            app:layout_constraintTop_toBottomOf="@+id/image_3"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="57dp"
            android:fontFamily="@font/quicksand"


            />

    </com.google.android.material.textfield.TextInputLayout>





    <Button
        android:id="@+id/btnnextA"
        android:text="NEXT"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="49px"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="40dp"

        />




    <TextView android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/txtUp"
        android:text="@string/forgetpassword"
        app:layout_constraintTop_toBottomOf="@id/btnnextA"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="57dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textAppearance="@style/mustcon"
        android:gravity="top"

        />















</androidx.constraintlayout.widget.ConstraintLayout>

